style "gorilla-default"
{
  GtkWidget::interior_focus = 1
  GtkButton::default_border = { 0, 0, 0, 0 } #{ 3, 3, 3, 3 }
  GtkButton::default_outside_border = { 0, 0, 0, 0 } #{ 3, 3, 3, 3 }
  GtkRange::trough_border = 0
  GtkWidget::focus_padding = 1
  GtkPaned::handle_size = 5
  GtkRange::slider_width = 15
  GtkRange::stepper_size = 15
  GtkScrollbar::min_slider_length = 30
  GtkCheckButton::indicator_size = 13
  GtkRadioButton::indicator_size = 13
  GtkMenuBar::internal-padding = 0
  GtkButton::child_displacement_x = 0
  GtkButton::child_displacement_y = 1
  GtkMenuItem::selected_shadow_type = GTK_SHADOW_IN
  xthickness = 0
  ythickness = 0
  
  #Оригинальные цвета, список неполный, остальные by default
			  #~ bg[NORMAL]      = "#dedfce"
			  #~ bg[PRELIGHT]	   = "#9f9f93"
			  #~ fg[PRELIGHT]    = "#ffffff"
			  #~ bg[ACTIVE]	   = "#bebfae"
			  #~ bg[INSENSITIVE] = "#eeeee0"
			  #~ bg[SELECTED]    = "#9f9f93"
			  #~ base[SELECTED]  = "#9f9f93"
			  #~ text[SELECTED]  = "#ffffff"
  #~ 
	fg[ACTIVE]        = "#000000"			#текст активных элементов
	fg[INSENSITIVE]   = "#9f9f93"			#текст неактивных элементов
	fg[NORMAL]        = "#000000"			#текст почти всех эл.
	fg[PRELIGHT]      = "#000000"
	fg[SELECTED]      = "#fff"				#текст баннера в gajim
  #~ 
	bg[ACTIVE]        = "#bebfae"			#неактивные выделения
	bg[INSENSITIVE]   = "#eeeee0"			#неактивные кнопки и стрелки
	bg[NORMAL]        = "#dedfce"			#осн.цвет фона
	bg[PRELIGHT]      = "#9f9f93"			#фон выделений
	bg[SELECTED]      = "#9f9f93"			#фон выделений
  #~ 
	base[ACTIVE]      = "#9f9f93"
	base[INSENSITIVE] = "#EAEBD9"			#фон недоступных полей
	base[NORMAL]      = "#f6f7f7"			#основной фон текстовых полей
	#~ base[PRELIGHT]    = "#f00"			#???
	base[SELECTED]    = "#9f9f93"			#фон выделений
	#~ 
	text[ACTIVE]      = "#000000"			#текст выделенного элемента
	text[INSENSITIVE] = "#9f9f93"			#текст недоступного элемента
	text[NORMAL]      = "#000000"			#текст большинства элементов
	#~ text[PRELIGHT]    = "#ff0000"		#???
	text[SELECTED]    = "#ffffff"			#текст выделений

  engine "industrial" {
    rounded_buttons = FALSE
  }
  GtkToolbar::shadow_type = none
  GtkStatusbar::shadow_type = none
  GtkMenuBar::shadow_type = none
  GtkHandleBox::shadow_type = none
  GtkEntry::shadow_type = in
  GtkToolbar::button_relief = GTK_RELIEF_NONE
  GtkScrolledWindow::scrollbar_spacing = 0
  
  GtkButton::button-relief = GTK_RELIEF_NONE
}

