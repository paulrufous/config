background yes
use_xft yes
xftfont Book Antiqua:size=50:style=bold
xftalpha 0,5 #.8
mpd_host localhost
mpd_port 6600
update_interval 2.0
total_run_times 0
own_window yes 
own_window_type override 
own_window_transparent yes
own_window_colour hotpink
double_buffer yes
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes
stippled_borders 8
border_margin 4
border_width 1
alignment top_left
gap_x 38
gap_y 10
no_buffers yes
uppercase no
cpu_avg_samples 2
net_avg_samples 2
override_utf8_locale yes
use_spacer no

TEXT
${color #707070}$mpd_artist${font Dejavu Sans:pixelsize=5:style=book}
${font Dejavu Sans:size=16:style=book}                ${color #dddddd}$mpd_title
