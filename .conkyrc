background no
use_xft yes
xftfont Book Antiqua:size=50:style=bold
#~ xftalpha 0,5 #.8
mpd_host localhost
mpd_port 6600
update_interval 2.0
total_run_times 0
own_window yes 
own_window_type override 
own_window_transparent yes
#~ own_window_transparent no
#~ own_window_colour rgb:0A/13/1C
double_buffer yes
draw_shades no
#~ #Глюки из-за смены шрифта посреди коньков
#~ draw_outline yes
#~ default_outline_color rgb:0A/13/1C
draw_borders no
draw_graph_borders yes
stippled_borders 8
border_width 1
alignment top_left
gap_x 38
gap_y 10
no_buffers yes
uppercase no
cpu_avg_samples 2
net_avg_samples 2
override_utf8_locale yes
use_spacer false



TEXT
${if_match "${mpd_status}" != "Stopped"}${color #7c8c9c}$mpd_artist${font Dejavu Sans:pixelsize=5:style=book}
${font Dejavu Sans:size=16:style=book}                ${color #9cacbc}$mpd_title$endif
